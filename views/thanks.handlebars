<div id="thanks-outer-container">
    {{#if updated}}
    <div class='err'>your profile updated successfully!</div>
    {{/if}}


<h1>Thank you for your support!</h1>
<div id="thanks-inner-container">
    <div id="sig">{{>sig}}</div>
    <h2>to see all {{signersNr}} signers please click <a href="/signers">here</a></h2>
    <h2>Update profile <a href="/profile/edit">here</a></h2>
    <form method='POST' action='/delete/signature'>
        <input type='hidden' name="_csrf" value={{csrfToken}}>
        <button name="button">delete signature</button>
    </form>
</div>
</div>
